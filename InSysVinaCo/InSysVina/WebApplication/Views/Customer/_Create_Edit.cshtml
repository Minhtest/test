        <div class="form-group" id="groupCard">
            @Html.LabelFor(m => m.CardNumberId, new { @class = "CardOld" })
            @if (Model.CardNumberId != null)
            {
                <label>Mã thẻ</label>
                <input id="CardNumberId" readonly="readonly" class="form-control" name="CardNumberId" value="@Model.CardNumberId" />
            }
            else
            {
                <label>Mã thẻ</label>
                 <select id="CardNumberId"
                                    name="CardNumberId"
                                    class="form-control"
                                     ></select>
                @*<input id="CardNumberId" class="form-control" name="CardNumberId" value="" />*@
