@using LIB.Warehouses
@using WebApplication.Authorize
@{
    ViewBag.Title = "Danh sách đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var AllWarehouse = ViewBag.AllWarehouse as List<WarehousesEntity>;
    var acc = User as CustomPrincipal;
}
@section styles_plugins{
    <link href="~/Content/css/bootstrap-table.min.css" rel="stylesheet" />
    <link href="~/Content/css/select2.min.css" rel="stylesheet" />
}
@section scripts_plugins{
    <script src="~/Content/js/bootstrap-table.min.js"></script>
    <script src="~/Content/js/bootstrap-table-vi-VN.min.js"></script>
    <script src="~/Content/js/select2.full.min.js"></script>
}
@section scripts{
    <script src="~/Scripts/controller/Orders.js"></script>
}
<div class="panel panel-info">
    <div class="panel-heading">
        Danh sách đơn hàng
    </div>
    <div class="panel-body">
        <div id="toolbar">
            <form id="filter" class="form-inline">
                <div class="form-group">
                    <div class="input-group">
                        @if (acc.IsSupperAdmin)
                        {
                            <span class="input-group-addon">ShowRoom</span>
                            <select class="form-control" id="drdWarehouse">
                                <option>Tất cả</option>
                                @foreach (var item in AllWarehouse)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        }
                        <span class="input-group-btn">
                            <a href="/Orders/Create" class="btn btn-primary">TẠO ĐƠN HÀNG</a>
                        </span>
                    </div>
                    <span class="input-group">
                        <span class="input-group-addon">Lọc ưu tiên</span>
                        <span class="input-group-btn">
                            <button type="button" id="btnSortNoPay" class="btn btn-default">Chưa thanh toán</button>
                            <button type="button" id="btnSortTotal" class="btn btn-default">Giá trị nhất</button>
                            <label class="btn btn-sm btn-default" style="font-size:13px">
                                <input type="checkbox" id="checkboxSortGuest" /> Khách vãng lai
                            </label>
                            <button type="button" id="btnSync" class="btn btn-info">Đồng bộ dữ liệu</button>
                        </span>
                    </span>
                </div>
            </form>
        </div>
        <table id="tblOrders" class="table" data-toolbar="#toolbar"></table>
    </div>
</div>

<div id="modelConfirm" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Xóa đơn hàng</h4>
            </div>
            <div class="modal-body">
                <p>Bạn có thực sự muốn xóa đơn hàng này!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btnDeleteOrder" data-dismiss="modal">Đồng ý</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Không Xóa</button>
            </div>
        </div>

    </div>
</div>



