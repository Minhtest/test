
@{
    ViewBag.Title = "CardNumber";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles_plugins{
    <link href="~/Content/css/bootstrap-table.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap-datepicker3.min.css" />
}
@section scripts_plugins{
    <script src="~/Content/js/bootstrap-table.min.js"></script>
    <script src="~/Content/js/bootstrap-table-vi-VN.min.js"></script>
    <script src="~/Content/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Content/js/bootstrap-datepicker.vi.min.js"></script>
}
@section scripts{
    <script src="~/Scripts/controller/CardNumber.js"></script>
}
<div class="panel panel-default">
    <div class="panel-heading">
        Danh sách thẻ thành viên
    </div>
    <div class="panel-body">
        <div id="toolbar">
            <form class="form-inline">
                <div class="form-group">
                    <div class="input-group" style="float:left">
                        <span class="input-group-btn">
                            <button type="button" id="btnAddCustomer" class="btn btn-primary" data-toggle="modal" data-target="#createCustomerModal">Đồng bộ</button>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group" style="display:inline-block">
                        <span class="input-group-addon">Lọc ưu tiên</span>
                        <span class="input-group-btn">
                            <button type="button" id="btnSortOrderMax" class="btn btn-default">Nhiều hóa đơn</button>
                            <button type="button" id="btnSortTotalMax" class="btn btn-default">Chi tiêu nhiều</button>
                        </span>
                    </div>
                </div>
            </form>
        </div>
        <table id="tblCustomer" class="table" data-toolbar="#toolbar"></table>
    </div>
</div>

